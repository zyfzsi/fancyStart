<Window x:Class="FancyStart.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:FancyStart"
        xmlns:h="clr-namespace:FancyStart.Helpers"
        Title="FancyStart - 启动项管理"
        Width="900" Height="620"
        WindowStartupLocation="CenterScreen"
        AllowDrop="True">

    <Window.Resources>
        <local:BindingProxy x:Key="Proxy" Data="{Binding}"/>
    </Window.Resources>

    <DockPanel>
        <!-- Title Bar -->
        <Border DockPanel.Dock="Top"
                Background="{StaticResource SurfaceBrush}"
                Padding="20,14">
            <DockPanel>
                <StackPanel DockPanel.Dock="Left">
                    <TextBlock Text="FancyStart"
                               FontSize="20"
                               FontWeight="Bold"
                               Foreground="{StaticResource TextBrush}"/>
                    <TextBlock Text="启动项管理工具"
                               Style="{StaticResource SubText}"
                               Margin="0,2,0,0"/>
                </StackPanel>
                <TextBox Style="{StaticResource SearchBoxStyle}"
                         Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                         DockPanel.Dock="Right"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Right"
                         Width="240"/>
            </DockPanel>
        </Border>

        <!-- Status Bar -->
        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem>
                <TextBlock>
                    <Run Text="共 "/>
                    <Run Text="{Binding TotalCount, Mode=OneWay}"/>
                    <Run Text=" 个启动项，已启用 "/>
                    <Run Text="{Binding EnabledCount, Mode=OneWay}"/>
                    <Run Text=" 个"/>
                </TextBlock>
            </StatusBarItem>
        </StatusBar>

        <!-- Main ListView -->
        <ListView ItemsSource="{Binding ItemsView}"
                  Padding="8,4">
            <ListView.GroupStyle>
                <GroupStyle HeaderTemplate="{StaticResource GroupHeaderTemplate}"/>
            </ListView.GroupStyle>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="4,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <!-- Icon -->
                        <Image Grid.Column="0"
                               Source="{Binding Icon}"
                               Width="32" Height="32"
                               Margin="0,0,12,0"
                               VerticalAlignment="Center"
                               RenderOptions.BitmapScalingMode="HighQuality"/>

                        <!-- Name + Command -->
                        <StackPanel Grid.Column="1"
                                    VerticalAlignment="Center"
                                    Margin="0,0,12,0">
                            <TextBlock FontSize="14"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextBrush}"
                                       TextTrimming="CharacterEllipsis"
                                       h:HighlightBehavior.Text="{Binding Name}"
                                       h:HighlightBehavior.Highlight="{Binding Data.SearchText, Source={StaticResource Proxy}}"
                                       h:HighlightBehavior.HighlightBrush="{StaticResource AccentBrush}"/>
                            <TextBlock Style="{StaticResource SubText}"
                                       TextTrimming="CharacterEllipsis"
                                       Margin="0,2,0,0"
                                       h:HighlightBehavior.Text="{Binding Command}"
                                       h:HighlightBehavior.Highlight="{Binding Data.SearchText, Source={StaticResource Proxy}}"
                                       h:HighlightBehavior.HighlightBrush="{StaticResource AccentBrush}"/>
                        </StackPanel>

                        <!-- Source Tag -->
                        <Border Grid.Column="2"
                                Background="{StaticResource HoverBrush}"
                                CornerRadius="3"
                                Padding="8,3"
                                Margin="0,0,12,0"
                                VerticalAlignment="Center">
                            <TextBlock FontSize="11"
                                       Foreground="{StaticResource SubtleTextBrush}"
                                       h:HighlightBehavior.Text="{Binding SourceDetail}"
                                       h:HighlightBehavior.Highlight="{Binding Data.SearchText, Source={StaticResource Proxy}}"
                                       h:HighlightBehavior.HighlightBrush="{StaticResource AccentBrush}"/>
                        </Border>

                        <!-- Toggle Switch -->
                        <ToggleButton Grid.Column="3"
                                      Style="{StaticResource ToggleSwitchStyle}"
                                      IsChecked="{Binding IsEnabled, Mode=TwoWay}"
                                      Checked="ToggleButton_Toggled"
                                      Unchecked="ToggleButton_Toggled"
                                      VerticalAlignment="Center"/>

                        <!-- Context Menu -->
                        <Grid.ContextMenu>
                            <ContextMenu>
                                <MenuItem Header="删除"
                                          Command="{Binding Data.DeleteItemCommand,
                                              Source={StaticResource Proxy}}"
                                          CommandParameter="{Binding}"/>
                            </ContextMenu>
                        </Grid.ContextMenu>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </DockPanel>
</Window>
